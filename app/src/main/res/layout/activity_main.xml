<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/currentpHbutton"
        android:layout_width="218dp"
        android:layout_height="58dp"
        android:layout_marginBottom="87dp"
        android:gravity="center"
        android:text="current pH"
        app:layout_constraintBottom_toTopOf="@+id/previouspHButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccessTimetextView" />

    <Button
        android:id="@+id/previouspHButton"
        android:layout_width="211dp"
        android:layout_height="55dp"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:text="previous pH"
        app:layout_constraintBottom_toTopOf="@+id/settingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentpHbutton" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="217dp"
        android:layout_height="62dp"
        android:layout_marginBottom="124dp"
        android:gravity="center"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previouspHButton" />

    <TextView
        android:id="@+id/AccessTimetextView"
        android:layout_width="195dp"
        android:layout_height="37dp"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/currentpHbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcometextView" />

    <TextView
        android:id="@+id/welcometextView"
        android:layout_width="244dp"
        android:layout_height="30dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="74dp"
        android:gravity="center"
        android:text="Welcome to the pH app"
        app:layout_constraintBottom_toTopOf="@+id/AccessTimetextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>